@{
    ViewData["Title"] = "All Employees";
}
@using ServiceDesk.Models.EmployeeViewModels
@using System.Collections.Generic
@model IEnumerable<EmployeeDetails>

<a asp-action="Add">Add Employee</a>

@foreach (var employee in Model)
{
    <div class="row">
        <div class="col s12 m6">
            <div class="card grey darken-1 stickey-action hoverable">
                <div class="card-content white-text activator">
                    <span class="card-title">@employee.Employee.FirstName @employee.Employee.LastName</span>
                    <p>@employee.Employee.Department</p><br>
                    <p>Open Tickets: @employee.OpenTicketCount</p>
                </div>
                <div class="card-action">
                    <a asp-action="AddTicket" asp-route-id="@employee.Employee.Id">Add Ticket</a>
                    <a asp-action="Open" asp-route-id="@employee.Employee.Id">Open</a>
                </div>
            </div>
        </div>
    </div>
}